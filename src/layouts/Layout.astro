---
export interface Props {
	title?: string;
}

const { title = 'Chiaroscuro - A Game of Light and Shadow' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content="Navigate a world where light and shadow shape reality. Manipulate contrasts to solve puzzles and uncover mysteries in Chiaroscuro." />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://torcheyegames.com/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Navigate a world where light and shadow shape reality. Manipulate contrasts to solve puzzles and uncover mysteries in Chiaroscuro." />
		<meta property="og:image" content="/og-image.png" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://torcheyegames.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Navigate a world where light and shadow shape reality. Manipulate contrasts to solve puzzles and uncover mysteries in Chiaroscuro." />
		<meta property="twitter:image" content="/og-image.png" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>