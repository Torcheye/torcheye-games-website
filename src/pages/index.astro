<style>
	:global(html) {
		background: #0a0a0a;
		color: #e4e4e4;
		scroll-behavior: smooth;
	}

	:global(body) {
		margin: 0;
		padding: 0;
		font-family: 'IM Fell English', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		line-height: 1.6;
		overflow-x: hidden;
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 4rem;
	}

	.hero {
		text-align: center;
		margin-bottom: 2rem;
		opacity: 0;
		animation: fadeIn 1s ease-out forwards;
	}

	.game-title {
		font-size: clamp(3rem, 8vw, 6rem);
		font-weight: 300;
		letter-spacing: -0.02em;
		margin: 0;
		background: linear-gradient(135deg, #ffffff 0%, #666666 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.tagline {
		font-size: 1.25rem;
		color: #999;
		margin: 0.5rem 0 0;
		font-weight: 300;
	}

	.media-section {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		align-items: center;
		opacity: 0;
		animation: fadeIn 1s ease-out 0.3s forwards;
	}

	.cover-image {
		width: 100%;
		height: auto;
		border-radius: 8px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
		transition: transform 0.3s ease;
	}

	.cover-image:hover {
		transform: scale(1.02);
	}

	.description {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
		opacity: 0;
		animation: fadeIn 1s ease-out 0.6s forwards;
	}

	.description p {
		font-size: 1.25rem;
		line-height: 1.8;
		color: #b4b4b4;
		margin: 0;
	}

	.steam-button {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		margin: 2rem auto;
		padding: 1.25rem 2.5rem;
		background: linear-gradient(135deg, #1b2838 0%, #2a475e 100%);
		color: white;
		text-decoration: none;
		border-radius: 8px;
		font-size: 1.125rem;
		font-weight: 500;
		transition: all 0.3s ease;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
		opacity: 0;
		animation: fadeIn 1s ease-out 0.9s forwards, pulse 2s ease-in-out 2s infinite;
	}

	.steam-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
		background: linear-gradient(135deg, #2a475e 0%, #1b2838 100%);
	}

	.steam-icon {
		width: 24px;
		height: 24px;
	}

	.contact {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-top: 4rem;
		opacity: 0;
		animation: fadeIn 1s ease-out 1.2s forwards;
	}

	.contact a {
		color: #666;
		transition: color 0.3s ease, transform 0.3s ease;
	}

	.contact a:hover {
		color: #e4e4e4;
		transform: translateY(-2px);
	}

	.contact svg {
		width: 24px;
		height: 24px;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.05);
		}
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem;
			gap: 2rem;
		}

		.media-section {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.description p {
			font-size: 1.125rem;
		}

		.steam-button {
			padding: 1rem 2rem;
			font-size: 1rem;
		}

		.contact {
			gap: 1.5rem;
		}
	}
</style>